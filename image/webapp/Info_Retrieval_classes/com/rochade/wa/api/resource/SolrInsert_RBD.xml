<!-- this file is used in old indexer tool which is no longer supported  -->
<RocService
	stylesheet="com/rochade/wa/api/resource/stylesheets/abspathV2.xsl, com.rochade.wa.api.ML.java, com/rochade/wa/api/resource/stylesheets/rsV2.xsl"
	whatdefault="id, name, scopeId, DEFINITION" what="{$what}">
	<!-- The parameter what is used to define what information is of interest. 
		Each keyword specified in what represents a column in the output ResultSet. -->

	<connection
		class="com.rochade.wa.api.roc.data.source.NonPooledDataSource"
		solrDefinitions = "{$sD}"
        physicalDefinitions    ="{$pD}"
        applicationDefinitions = "{$aD}"
		id="c2"/>
	
	<sorting>
		<!-- The highest is the boost, the most that attribute will matter for the matching score of the item.
		Items with higher score are listed first among results (for a given Solr core).
		 -->
		 <field name="NAME" boost="10"/>
		 <field name="DEFINITION" boost="2"/>
	</sorting>
	
	<categories>
		<category id="BuildIndex">

			<context id="c2" />
			<category id="CleanupBigData">
				<DeleteSolr coreId="search_rbd" />
			</category>

			<category id="InsertRBD_CLUSTER"
				name="Import RBD_CLUSTERs into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_rbd">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=RBD_CLUSTER&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}&#038;inheritance={$inheritance}">
						<field value="68" name="level1" />
						<field value="69" name="level2" />
						<field value="search_rbd" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
					</entity>
				</InsertSolr>
			</category>

			<category id="InsertRBD_CLUSTER-SERVICE"
				name="Import RBD_CLUSTER-SERVICE into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_rbd">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=RBD_CLUSTER-SERVICE&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}&#038;inheritance={$inheritance}">
						<field value="68" name="level1" />
						<field value="70" name="level2" />
						<field value="search_rbd" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
					</entity>
				</InsertSolr>
			</category>

			<category id="InsertRBD_DIRECTORY" name="Import RBD_DIRECTORY into Solr "
				whatMin="id, name, scopeId, DEFINITION, absPath, languages">
				<context id="c2" />
				<InsertSolr coreId="search_rbd">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=RBD_DIRECTORY&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}&#038;inheritance={$inheritance}">
						<field value="68" name="level1" />
						<field value="71" name="level2" />
						<field value="search_rbd" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
					</entity>
				</InsertSolr>
			</category>

			<category id="InsertRBD_HOST" name="Import RBD_HOST into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_rbd">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=RBD_HOST&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}&#038;inheritance={$inheritance}">
						<field value="68" name="level1" />
						<field value="72" name="level2" />
						<field value="search_rbd" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
					</entity>
				</InsertSolr>
			</category>
			
			<category id="InsertRBD_CONNECTION" name="Import RBD_CONNECTION into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_rbd">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=RBD_CONNECTION&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}&#038;inheritance={$inheritance}">
						<field value="68" name="level1" />
						<field value="73" name="level2" />
						<field value="search_rbd" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
					</entity>
				</InsertSolr>
			</category>
			
			<category id="InsertRBD_CLUSTER-SERVICE-ROLE" name="Import RBD_CLUSTER-SERVICE-ROLE into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_rbd">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=RBD_CLUSTER-SERVICE-ROLE&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}&#038;inheritance={$inheritance}">
						<field value="68" name="level1" />
						<field value="74" name="level2" />
						<field value="search_rbd" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
					</entity>
				</InsertSolr>
			</category>
			
			<category id="InsertRBD_CONFIG-PARAM" name="Import RBD_CONFIG-PARAM into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_rbd">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=RBD_CONFIG-PARAM&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}&#038;inheritance={$inheritance}">
						<field value="68" name="level1" />
						<field value="75" name="level2" />
						<field value="search_rbd" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
					</entity>
				</InsertSolr>
			</category>
		</category>
	</categories>
</RocService>
