<!-- this file is used in old indexer tool which is no longer supported  -->
<RocService
	stylesheet="com/rochade/wa/api/resource/stylesheets/abspathV2.xsl, com.rochade.wa.api.ML.java, com/rochade/wa/api/resource/stylesheets/rsV2.xsl"
	whatdefault="id, name, DEFINITION" what="{$what}">
	<!-- The parameter what is used to define what information is of interest. 
		Each keyword specified in what represents a column in the output ResultSet. -->

	<connection
		class="com.rochade.wa.api.roc.data.source.NonPooledDataSource"
		solrDefinitions = "{$sD}"
        physicalDefinitions    ="{$pD}"
        applicationDefinitions = "{$aD}"
		id="c2"/>
	
	<sorting>
		<!-- The highest is the boost, the most that attribute will matter for the matching score of the item.
		Items with higher score are listed first among results (for a given Solr core).
		 -->
		 <field name="NAME" boost="10"/>
		 <field name="DEFINITION" boost="2"/>
	</sorting>
	
	<categories>
		<category id="BuildIndex">

			<context id="c2" />
			<category id="CleanupReferenceData">
				<DeleteSolr coreId="search_ref" />
			</category>
			
			<category id="InsertMDM_DATA_CONTEXT" name="Import Data Contexts (MDM_DATA_CONTEXT) into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_ref">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=MDM_DATA_CONTEXT&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}">
						<field value="99" name="level1" />
						<field value="100" name="level2" />
						<field value="search_ref" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
						<!-- <field column="MDM_DESCRIPTION" />  -->
					</entity>
				</InsertSolr>
			</category>

			<category id="InsertMDM_RDM_REFERENCE_COLLECTION"
				name="Import MDM_RDM_REFERENCE_COLLECTION into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_ref">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=MDM_RDM_REFERENCE_COLLECTION&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}">
						<field value="99" name="level1" />
						<field value="101" name="level2" />
						<field value="search_ref" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
						<!-- <field column="MDM_DESCRIPTION" />  -->
					</entity>
				</InsertSolr>
			</category>

			<category id="InsertMDM_RDM_VALUE_COLLECTION" name="Import MDM_RDM_VALUE_COLLECTION into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_ref">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=MDM_RDM_VALUE_COLLECTION&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}">
						<field value="99" name="level1" />
						<field value="102" name="level2" />
						<field value="search_ref" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
						<!-- <field column="MDM_DESCRIPTION" />  -->
					</entity>
				</InsertSolr>
			</category>
			
			<category id="InsertMDM_RMD_DATA_CONCEPT" name="Import Data Concepts (MDM_RMD_DATA_CONCEPT) into Solr BUT only those which scope items are of type Data Context (ie the first-class Data Concepts).">
				<context id="c2" />
				<InsertSolr coreId="search_ref">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=MDM_RMD_DATA_CONCEPT&#038;ScopeType=MDM_DATA_CONTEXT&#038;ScopeAttribute=MDM_HAS_CONCEPT&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}">
						<field value="99" name="level1" />
						<field value="104" name="level2" />
						<field value="search_ref" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
						<!-- <field column="MDM_DESCRIPTION" />  -->
					</entity>
				</InsertSolr>
			</category>
			
		</category>
	</categories>
</RocService>
