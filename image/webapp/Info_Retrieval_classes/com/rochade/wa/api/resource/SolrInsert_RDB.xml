<!-- this file is used in old indexer tool which is no longer supported  -->
<RocService
	stylesheet="com/rochade/wa/api/resource/stylesheets/abspathV2.xsl, com.rochade.wa.api.ML.java, com/rochade/wa/api/resource/stylesheets/rsV2.xsl"
	whatdefault="id, name, scopeId, DEFINITION" what="{$what}">
	<!-- The parameter what is used to define what information is of interest. 
		Each keyword specified in what represents a column in the output ResultSet. -->

	<connection
		class="com.rochade.wa.api.roc.data.source.NonPooledDataSource"
		solrDefinitions = "{$sD}"
        physicalDefinitions    ="{$pD}"
        applicationDefinitions = "{$aD}"
		id="c2"/>
	
	<sorting>
		<!-- The highest is the boost, the most that attribute will matter for the matching score of the item.
		Items with higher score are listed first among results (for a given Solr core).
		 -->
		 <field name="NAME" boost="10"/>
		 <field name="DEFINITION" boost="2"/>
	</sorting>
	
	<categories>
		<category id="BuildIndex">

			<context id="c2" />
			<category id="CleanupDWRView">
				<DeleteSolr coreId="search_rdb" />
			</category>

			<category id="InsertDWR_RDB_TABLE_OR_VIEW"
				name="Import Relational DataBases Tables or Views into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_rdb">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=DWR_RDB_TABLE_OR_VIEW&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}&#038;inheritance={$inheritance}">
						<field value="5" name="level1" />
						<field value="11" name="level2" />
						<field value="search_rdb" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
					</entity>
				</InsertSolr>
			</category>

			<category id="InsertDWR_RDB_DB_SYSTEM"
				name="Import Relational DataBases Database Systems into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_rdb">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=DWR_RDB_DB_SYSTEM&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}&#038;inheritance={$inheritance}">
						<field value="5" name="level1" />
						<field value="10" name="level2" />
						<field value="search_rdb" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
					</entity>
				</InsertSolr>
			</category>

			<category id="InsertDWR_RDB_DATABASE" name="Import Relational DataBases into Solr "
				whatMin="id, name, scopeId, DEFINITION, absPath, languages">
				<context id="c2" />
				<InsertSolr coreId="search_rdb">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=DWR_RDB_DATABASE&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}&#038;inheritance={$inheritance}">
						<field value="5" name="level1" />
						<field value="9" name="level2" />
						<field value="search_rdb" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
					</entity>
				</InsertSolr>
			</category>

			<category id="InsertDWR_RDB_SCHEMA"
				name="Import Relational DataBases Schemas into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_rdb">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=DWR_RDB_SCHEMA&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}&#038;inheritance={$inheritance}">
						<field value="5" name="level1" />
						<field value="8" name="level2" />
						<field value="search_rdb" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
					</entity>
				</InsertSolr>
			</category>

			<category id="InsertDWR_RDB_COLUMN"
				name="Import Relational DataBases Columns into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_rdb">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=DWR_RDB_COLUMN&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}&#038;inheritance={$inheritance}">
						<field value="5" name="level1" />
						<field value="6" name="level2" />
						<field value="search_rdb" name="app_id" />
						<field column="scopeId" />
						<field column="DEFINITION" />
					</entity>
				</InsertSolr>
			</category>

		</category>
	</categories>
</RocService>
