<!-- used by GlobalSearch, at least to search Business Terms -->
<RocService
  stylesheet=""
  whatdefault="id, NAME, DEFINITION, RBG/DESIGNATION" what="{$what}">
  <!-- The parameter what is used to define what information is of interest. 
    Each keyword specified in what represents a column in the output ResultSet. -->

	<!-- Rank for each field. Rank is as bigger as bigger number -->
	<boost name="NAME" value="10" />
	<boost name="DEFINITION" value="2" />
  
  <connection solrDefinitions="solr.solr" 
         id="c1" />
<connection
         physicalDefinitions    ="startup"
         applicationDefinitions = "applications_rir" id="c2" />

  <categories>
	<patterns>
		<pattern id="p1">
		</pattern>
	</patterns>
	
<!-- http://gechem70096:8080/GlobalSearch/MGSolr?category=QuerySolr&text=broker -->
<!-- http://gechem70096:8080/GlobalSearch/MGSolr?category=QuerySolr&Pattern=trailing&_I_ProjectionLang=en -->
	<!--  -category id="QuerySolrMyIA" stylesheet="com.rochade.wa.api.MLS.MLSolr.java, com/rochade/wa/api/resource/stylesheets/indexMyIA.xsl">
		<context id="c1" />
		<solrQuery coreId="search_mg" query="facet=true&amp;facet.pivot=level1,level2,level3&amp;qt=browse"
			wt="xml" indent="true" qt="browse" q="{$q}" q1="{$q1}"/>
	</category-->
	
	<!-- Below are the definitions for querying data from Solr -->
	<category id="QuerySolr">
		<category id="Search" stylesheet="com.rochade.wa.api.MLS.MLSolr.java">
			<context id="c1" />
			<context id="c2" />
			<multiSolrQuery query="qt=browse" wt="xml" indent="true" qt="browse" q="{$q}" q1="{$q1}" >
				<!-- CAUTION: from release 9.5, the list of active core to search within is managed by the 'startup.properties' configuration file -->
			</multiSolrQuery>
		</category>
	</category>
	
	<!-- Below are the definitions for getting suggestions from Solr -->
	<category id="QueryToSolr">
		<category id="Suggest">
			<context id="c1" />
			<context id="c2" />
			<multiSolrQuery wt="{$wt}" indent="{$indent}" qParserType="{$qParserType}" query="{$query}">
				<!-- CAUTION: from release 9.5, the list of active core to search within is managed by the 'startup.properties' configuration file -->
			</multiSolrQuery>
		</category>
	</category>
  </categories>
  <request>
    <!-- <maxHits>${maxHits}</maxHits> -->
    <task mand="true">${task}</task>
    <category>${category}</category>
    <searchString>${searchString}</searchString>
  </request>
</RocService>
