 			<category id="InsertOtherBusinessItems" name="Index all other Business Items into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_mg">
					<!--
						query="MGView?category=ListItemsOfType&#038;Type=BPK__BUSINESS_ITEM&#038;ExceptTypes=RBG/GLOSSARY,RBG/CONTEXT,RBG/BUSINESS-TERM,BPK_BUSINESS_RULE,BPK_CRITICAL_DATA_ELEMENT,BPK_POLICY,BPK_PROCESS,BPK_STANDARD,BPK_CONTEXT,DWR_ARC_BUSINESS_APPLICATION,GDP_PERSONAL_INFORMATION,GDP_PI_STRUCTURE&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}&#038;inheritance={$inheritance}">
					-->
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=BPK__BUSINESS_ITEM&#038;ExceptTypes={$TypesIndexedByOtherRules}&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}&#038;inheritance={$inheritance}">
						<field value="1" name="level1" />
						<field value="1000" name="level2" />
						<field value="search_mg" name="app_id"/>
						<field column="name" />
						<field column="DEFINITION" />
						<field column="RBG/DESIGNATION" name="ACRONYMS" />
					</entity>
				</InsertSolr>
			</category>
			
