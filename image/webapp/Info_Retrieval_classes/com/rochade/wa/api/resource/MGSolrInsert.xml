	  <category id="InsertBusinessTermView" name="Delivers the list of business terms which belong to a glossary">
	    <context id="c2" />
	      <InsertSolr coreId="search_mg" temporalSwitch="true">
	        <entity name="term" query="MGView?category=ListItemsOfType3&#038;Type=RBG/BUSINESS-TERM&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}" >
	          <entity query="MGView?category=ListTermDetailsJson&#038;Term={$term.id}&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}&#038;what=RBG/STATUS" transform="json">
	  			<field value="1" name="level1"/>
	         	<field value="2" name="level2"/>
				<field value="search_mg" name="app_id"/>
	          	<field column="GLOSSARY" name="level3"/>
