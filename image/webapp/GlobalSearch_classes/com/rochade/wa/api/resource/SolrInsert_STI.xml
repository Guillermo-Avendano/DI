<!-- this file is used in old indexer tool which is no longer supported  -->
<RocService
	stylesheet="com/rochade/wa/api/resource/stylesheets/abspathV2.xsl, com.rochade.wa.api.ML.java, com/rochade/wa/api/resource/stylesheets/rsV2.xsl"
	whatdefault="id, name, DEFINITION" what="{$what}">
	<!-- The parameter what is used to define what information is of interest. 
		Each keyword specified in what represents a column in the output ResultSet. -->

	<connection
		class="com.rochade.wa.api.roc.data.source.NonPooledDataSource"
		solrDefinitions = "{$sD}"
        physicalDefinitions    ="{$pD}"
        applicationDefinitions = "{$aD}"
		id="c2"/>
	
	<sorting>
		<!-- The highest is the boost, the most that attribute will matter for the matching score of the item.
		Items with higher score are listed first among results (for a given Solr core).
		 -->
		 <field name="NAME" boost="10"/>
		 <field name="DEFINITION" boost="2"/>
	</sorting>
	
	<categories>
		<category id="BuildIndex">

			<context id="c2" />
			<!-- http://gechem70096:8080/GlobalSearch/MGView?category=ListTermDetails&Term=9188&_ProjectionLang=zh,en,de -->
			<category id="CleanupStitching">
				<DeleteSolr coreId="search_sti" />
			</category>

			<category id="InsertSTI_CONTAINER" name="Import STI_CONTAINER into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_sti">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=STI_CONTAINER&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}">
						<field value="118" name="level1" />
						<field value="119" name="level2" />
						<field value="search_sti" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
					</entity>
				</InsertSolr>
			</category>
			
			<category id="InsertSTI_STRUCTURE_LINK" name="Import STI_STRUCTURE_LINK into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_sti">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=STI_STRUCTURE_LINK&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}">
						<field value="118" name="level1" />
						<field value="120" name="level2" />
						<field value="search_sti" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
					</entity>
				</InsertSolr>
			</category>

			<category id="InsertSTI_FIELD_LINK" name="Import STI_FIELD_LINK into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_sti">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=STI_FIELD_LINK&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}">
						<field value="118" name="level1" />
						<field value="121" name="level2" />
						<field value="search_sti" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
					</entity>
				</InsertSolr>
			</category>
			
		</category>
	</categories>
</RocService>
