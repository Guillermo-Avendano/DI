					<entity
						query="MGView?category=ListItemsOfType&#038;Type=DWR_TFM_TRANSFORMATION_TYPE&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}&#038;inheritance={$inheritance}">
						<field value="35" name="level1" />
						<field value="92" name="level2" />
						<field value="search_rdi" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
					</entity>
				</InsertSolr>
			</category>

		</category>
	</categories>
</RocService>
