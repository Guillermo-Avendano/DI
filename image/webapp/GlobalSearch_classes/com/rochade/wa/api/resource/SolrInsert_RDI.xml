<!-- this file is used in old indexer tool which is no longer supported  -->
<RocService
	stylesheet="com/rochade/wa/api/resource/stylesheets/abspathV2.xsl, com.rochade.wa.api.ML.java, com/rochade/wa/api/resource/stylesheets/rsV2.xsl"
	whatdefault="id, name, scopeId, DEFINITION" what="{$what}">
	<!-- The parameter what is used to define what information is of interest. 
		Each keyword specified in what represents a column in the output ResultSet. -->

	<connection
		class="com.rochade.wa.api.roc.data.source.NonPooledDataSource"
		solrDefinitions = "{$sD}"
        physicalDefinitions    ="{$pD}"
        applicationDefinitions = "{$aD}"
		id="c2"/>
	
	<sorting>
		<!-- The highest is the boost, the most that attribute will matter for the matching score of the item.
		Items with higher score are listed first among results (for a given Solr core).
		 -->
		 <field name="NAME" boost="10"/>
		 <field name="DEFINITION" boost="2"/>
	</sorting>
	
	<categories>
		<category id="BuildIndex">

			<context id="c2" />
			<category id="CleanupDataIntegration">
				<DeleteSolr coreId="search_rdi" />
			</category>

			<category id="InsertDWR_TFM_SYSTEM" name="Import DWR_TFM_SYSTEM into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_rdi">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=DWR_TFM_SYSTEM&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}&#038;inheritance={$inheritance}">
						<field value="35" name="level1" />
						<field value="90" name="level2" />
						<field value="search_rdi" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
					</entity>
				</InsertSolr>
			</category>

			<category id="InsertDWR_TFM_ACTIVITY" name="Import DWR_TFM_ACTIVITY into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_rdi">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=DWR_TFM_ACTIVITY&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}&#038;inheritance={$inheritance}">
						<field value="35" name="level1" />
						<field value="36" name="level2" />
						<field value="search_rdi" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
					</entity>
				</InsertSolr>
			</category>

			<category id="InsertDWR_TFM_TASK" name="Import DWR_TFM_TASK into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_rdi">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=DWR_TFM_TASK&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}&#038;inheritance={$inheritance}">
						<field value="35" name="level1" />
						<field value="37" name="level2" />
						<field value="search_rdi" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
					</entity>
				</InsertSolr>
