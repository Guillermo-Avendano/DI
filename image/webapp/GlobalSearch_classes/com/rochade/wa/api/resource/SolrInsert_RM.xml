						<field value="24" name="level1" />
						<field value="106" name="level2" />
						<field value="search_rm" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
						<!-- <field column="DWR_DESCRIPTION" /> -->
					</entity>
				</InsertSolr>
			</category>


			<category id="InsertDWR_ERM_RELATIONSHIP" name="Import ERM Relationships into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_rm">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=DWR_ERM_RELATIONSHIP&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}">
						<field value="24" name="level1" />
						<field value="29" name="level2" />
						<field value="search_rm" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
						<!-- <field column="DWR_DESCRIPTION" /> -->
					</entity>
				</InsertSolr>
			</category>
		</category>
	</categories>
</RocService>
