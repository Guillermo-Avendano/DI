<!-- this file is used in old indexer tool which is no longer supported  -->
<RocService
	stylesheet="com/rochade/wa/api/resource/stylesheets/abspathV2.xsl, com.rochade.wa.api.ML.java, com/rochade/wa/api/resource/stylesheets/rsV2.xsl"
	whatdefault="id, name, DEFINITION" what="{$what}">
	<!-- The parameter what is used to define what information is of interest. 
		Each keyword specified in what represents a column in the output ResultSet. -->

	<connection
		class="com.rochade.wa.api.roc.data.source.NonPooledDataSource"
		solrDefinitions = "{$sD}"
        physicalDefinitions    ="{$pD}"
        applicationDefinitions = "{$aD}"
		id="c2"/>
	
	<sorting>
		<!-- The highest is the boost, the most that attribute will matter for the matching score of the item.
		Items with higher score are listed first among results (for a given Solr core).
		 -->
		 <field name="NAME" boost="10"/>
		 <field name="DEFINITION" boost="2"/>
	</sorting>
	
	<categories>
		<category id="BuildIndex">

			<context id="c2" />
			<!-- http://gechem70096:8080/GlobalSearch/MGView?category=ListTermDetails&Term=9188&_ProjectionLang=zh,en,de -->
			<category id="CleanupModels">
				<DeleteSolr coreId="search_rm" />
			</category>

			<category id="InsertDWR_ERM_MODEL" name="Import ERM Models into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_rm">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=DWR_ERM_MODEL&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}">
						<field value="24" name="level1" />
						<field value="25" name="level2" />
						<field value="search_rm" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
						<!-- <field column="DWR_DESCRIPTION" /> -->
					</entity>
				</InsertSolr>
			</category>
			
			<category id="InsertDWR_ERM_SUBJECT_AREA" name="Import DWR_ERM_SUBJECT_AREA into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_rm">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=DWR_ERM_SUBJECT_AREA&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}">
						<field value="24" name="level1" />
						<field value="26" name="level2" />
						<field value="search_rm" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
						<!-- <field column="DWR_DESCRIPTION" /> -->
					</entity>
				</InsertSolr>
			</category>

			<category id="InsertDWR_ERM_ENTITY" name="Import ERM Entities into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_rm">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=DWR_ERM_ENTITY&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}">
						<field value="24" name="level1" />
						<field value="27" name="level2" />
						<field value="search_rm" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
						<!-- <field column="DWR_DESCRIPTION" /> -->
					</entity>
				</InsertSolr>
			</category>
			
			<category id="InsertDWR_ERM_ATTRIBUTE" name="Import DWR_ERM_ATTRIBUTE into Solr ">
				<context id="c2" />
