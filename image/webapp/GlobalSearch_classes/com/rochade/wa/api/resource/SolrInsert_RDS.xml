<!-- this file is used in old indexer tool which is no longer supported  -->
<RocService
	stylesheet="com/rochade/wa/api/resource/stylesheets/abspathV2.xsl, com.rochade.wa.api.ML.java, com/rochade/wa/api/resource/stylesheets/rsV2.xsl"
	whatdefault="id, name, scopeId, DEFINITION" what="{$what}">
	<!-- The parameter what is used to define what information is of interest. 
		Each keyword specified in what represents a column in the output ResultSet. -->

	<connection
		class="com.rochade.wa.api.roc.data.source.NonPooledDataSource"
		solrDefinitions = "{$sD}"
        physicalDefinitions    ="{$pD}"
        applicationDefinitions = "{$aD}"
		id="c2"/>
	
	<sorting>
		<!-- The highest is the boost, the most that attribute will matter for the matching score of the item.
		Items with higher score are listed first among results (for a given Solr core).
		 -->
		 <field name="NAME" boost="10"/>
		 <field name="DEFINITION" boost="2"/>
	</sorting>
	
	<categories>
		<category id="BuildIndex">

			<context id="c2" />
			<category id="CleanupDataStructure">
				<DeleteSolr coreId="search_rds" />
			</category>

			<category id="InsertDWR_DAT_PACKAGE"
				name="Import DWR_DAT_PACKAGE into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_rds">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=DWR_DAT_PACKAGE&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}&#038;inheritance={$inheritance}">
						<field value="111" name="level1" />
						<field value="112" name="level2" />
						<field value="search_rds" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
						<!-- <field column="DWR_DESCRIPTION" />  -->
					</entity>
				</InsertSolr>
			</category>

			<category id="InsertDWR_DAT_FILE"
				name="Import DWR_DAT_FILE into Solr ">
				<context id="c2" />
				<InsertSolr coreId="search_rds">
					<entity
						query="MGView?category=ListItemsOfType&#038;Type=DWR_DAT_FILE&#038;_ProjectionLang={$_ProjectionLang}&#038;maxHits={$maxHits}&#038;connectionType=com.rochade.wa.api.roc.data.source.NonPooledDataSource&#038;pD={$pD}&#038;aD={$aD}&#038;sD={$sD}&#038;inheritance={$inheritance}">
						<field value="111" name="level1" />
						<field value="113" name="level2" />
						<field value="search_rds" name="app_id" />
						<field column="name" />
						<field column="DEFINITION" />
						<!-- <field column="DWR_DESCRIPTION" />  -->
					</entity>
				</InsertSolr>
			</category>

