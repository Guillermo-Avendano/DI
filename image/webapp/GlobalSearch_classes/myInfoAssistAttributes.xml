<!-- 10.01.001 -->

<!-- To display additional (Text or Link) Attributes in the Detail view of an item, add those extra attributes in one of the two placeholders below. -->
<!-- The Link Attributes MUST have a 'linkType' property defined; while the Text Attributes must avoid to define such property (otherwise they will be processed as a Link Attribute what will create visual defects). -->
<!-- The Link Attributes will be displayed in a table format -->
<!-- TODO: extend with other possible display formats -->
<!-- For link attributes set the 'linkType'. Following values are supported:
	- self  = Link within in the browser of MyInfoAssist
	- Rochade = opens the item within Rochade
	- noHyperlink  = display only the name of the linked items, no hyperlink
	- RoPlatform = deprecated by "Rochade"
-->
<!-- Display order of extra attributes in Detail view page will be the same as the one defined in each placeholder. -->
<myinfoAssistAttributes>
	<!-- Placeholder#1: Extra Attributes defined here will be displayed in the Detail view of an item after the regular Text Attributes but before the regular Link Attributes. -->
	<attributes>
		<!-- Example: Uncomment if "RBG/SYNONYM-FOR" Text attribute should become visible -->
		<!-- <attribute attribute="RBG/SYNONYM-FOR"/> -->
		<!-- Example: Uncomment if "RBG/SPECIALIZES" Link attribute should become visible -->
		<!-- <attribute attribute="RBG/SPECIALIZES" linkType="self"/> -->
	</attributes>
	
	<!-- Placeholder#2: Extra Attributes defined here will be displayed in the Detail view of an item after the regular Link Attributes. -->
	<linkAttributes>
		<!-- Example: Uncomment if "RBG/STATUS" Text attribute should become visible -->
		<!-- <attribute attribute="RBG/STATUS"/> -->
		<!-- Example: Uncomment if "RBG/BELONGS-TO-CONTEXT" Link attribute should become visible -->
		<!-- <attribute attribute="RBG/BELONGS-TO-CONTEXT" linkType="self"/> -->
	</linkAttributes>
	
	<!-- DEPRECATED: definition of how to process the supported 'linkType' values is now managed properly in internal way -->
	<linkTypes>
		<linkType name="RoPlatform">
			<href>
				http://localhost:8080/rochade/index.zul#item=$itemId!appid=!workspace=$workspace.mg.PROD!component=ObjectArea!navHide=true
			</href>
		<display>Link $name points to RoPlatform</display>
		</linkType>
		<linkType name="self">
			<href>#</href>
			<serviceURL>#</serviceURL>
		</linkType>
		<linkType name="noHyperlink">
			<!--  display only the name of the linked item without hyperlink -->
		</linkType>
	</linkTypes>
	
</myinfoAssistAttributes>