        </property>
        <property>
            <property-name>mold</property-name>
            <property-value>3d</property-value>
        </property>
		<mold>
			<mold-name>3d</mold-name>
			<mold-uri>mold/groupbox.js</mold-uri>
			<css-uri>css/groupbox.css.dsp</css-uri>
		</mold>
